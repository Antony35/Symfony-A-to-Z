{% extends 'base.html.twig' %}

{% block title %}Réalisations{% endblock %}

{% block body %}
<section class="realisation">
    <div class="realisation__title">
        <h1>Dernières Réalisation</h1>
        <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Sint sapiente sunt rem reiciendis adipisci alias magni.</p>    
    </div>
    {% for peinture in peintures %}
        <a href="{{ path('datail_realisation', { 'slug' : peinture.slug } ) }}">
            <div class="realisation__container">
                <h2>{{ peinture.nom }}</h2>
                <img src="{{ vich_uploader_asset(peinture, 'imageFile') }}" alt="" width="150" height="120">
                <p>{{ peinture.description }}</p>
                <p>{{ peinture.createdAt|date('d/m/Y') }}</p>
            </div>
        </a>
    {% endfor %}
    <div>
        {{ knp_pagination_render(peintures, 'base/pagination.html.twig') }}
    </div>
</section>
{% endblock %}
